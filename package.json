{
  "name": "manychat-frontend",
  "version": "16.0.6",
  "private": true,
  "license": "MIT",
  "engines": {
    "node": "^16",
    "npm": "^8"
  },
  "workspaces": [
    "./packages/*",
    "main"
  ],
  "scripts": {
    "start": "npm run start --workspace @manychat/main",
    "build": "npm run build --workspace @manychat/main",
    "i18n:extract": "npm run i18n:extract --workspace @manychat/main",
    "generate-emoji": "node ./bin/generate-emoji.js",
    "icons:install": "npm install --save --save-exact @manychat/icons@${version} --workspace @manychat/main && npm install --save --save-exact @manychat/icons@${version} --workspace @manychat/manyui",
    "posticons:install": "git commit -m \"chore(icons): ${version}\" package.json package-lock.json",
    "test": "jest --onlyChanged --changedSince=origin/dev --",
    "test-ci": "jest --maxWorkers=2 --ci=true --changedSince=origin/dev --",
    "test-ci-all": "jest --maxWorkers=2 --ci=true",
    "test-all": "WORKERS=`expr \\`getconf _NPROCESSORS_ONLN\\` / 4`; jest --maxWorkers=$WORKERS --ci=true",
    "test-watch": "jest --logHeapUsage --watch",
    "format-all": "prettier --write .",
    "generate-ts-precommit-config": "node ./bin/tsc-precommit-config-generator.js",
    "tsc-precommit-check": "tsc --project ./ts-precommit-config.json",
    "lint": "eslint main packages apps"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "@swc/core": "^1.2.123",
    "@swc/jest": "^0.2.15",
    "@types/jest": "^26.0.21",
    "@typescript-eslint/eslint-plugin": "^5.26.0",
    "@typescript-eslint/parser": "^5.26.0",
    "autoprefixer": "^10.0.1",
    "dompurify": "^2.3.8",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.27.0",
    "eslint-plugin-react-hooks": "^4.5.0",
    "jest": "^28.1.0",
    "jest-canvas-mock": "^2.4.0",
    "jest-css-modules": "^2.1.0",
    "jest-environment-jsdom": "^28.1.0",
    "jest-fetch-mock": "^3.0.3",
    "jest-matcher-utils": "^26.6.2",
    "pixi.js": "^6.2.2",
    "pixi.js-legacy": "^6.2.2",
    "postcss": "^8.3.5",
    "prettier": "^2.3.2",
    "svgo": "^2.8.0",
    "typescript": "^4.7.3",
    "utility-types": "^3.10.0"
  },
  "devDependencies": {
    "husky": "^3.0.9",
    "lint-staged": "^11.2.4"
  }
}
